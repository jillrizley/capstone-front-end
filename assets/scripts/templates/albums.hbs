{{#each albums as |album|}}
  <div class="col col-md-3 grid" data-album-id="{{album.id}}">
    <h3> {{album.title}}</h3>
    <p> {{album.comments}}</p>
    <button type="button" class="btn btn-primary btn-sm viewAlbumBtn">View Album</button>
    <button type="button" class="btn btn-primary btn-sm editAlbumBtn">Edit Album</button>
    <button type="button" class="btn btn-danger btn-sm deleteAlbumBtn">Delete Album</button>
  </div>
{{/each}}
