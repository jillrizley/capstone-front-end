<form class="addPhotoForm">
  <div class="form-group">
    <label>Link Title</label>
    <input type="text"  class="form-control" name="photo[title]" placeholder="title" value="{{title}}"/>
  </div>
  <div class="form-group">
    <label>URL</label>
    <input type="text"  class="form-control" name="photo[url]" placeholder="URL" value="{{url}}"/>
  </div>
  <input type="submit" class="btn addPhotoBtn btn-sm" value="Add Link" />
</form>
